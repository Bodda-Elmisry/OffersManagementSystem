@model OffersManagementSystem.Web.DTOs.RegisterDTO

@{
    ViewData["Title"] = "Register";
}

<div class="container mt-5" style="max-width: 500px;">
    <h2 class="text-center mb-4">@ViewData["Title"]</h2>

    <form asp-action="Register" asp-controller="Account" method="post">
        <div class="mb-3">
            
            <label asp-for="UserName" class="form-label">Username</label>
            <input asp-for="UserName" class="form-control" />
            <span asp-validation-for="UserName" class="text-danger"></span>
        </div>

        <div class="mb-3">
            @* <h4 class="info-card">Password</h4>
            <input type="text" class="form-control text-body" type="password" asp-for="@Model.Password" /> *@
            <label asp-for="Password" class="form-label">Password</label>
            <input asp-for="Password" type="password" class="form-control" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="ConfirmPassword" class="form-label">Confirm Password</label>
            <input asp-for="ConfirmPassword" type="password" class="form-control" />
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        </div>

        <input asp-for="IsAdmin" class="form-check-input" type="checkbox" id="IsAdminCheckbox" />
        <label class="form-check-label" for="IsAdminCheckbox">
            Add user as admin
        </label>

        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>


        <button type="submit" class="btn btn-success w-100">Register</button>

        
        <div class="mt-3 text-center">
            <a asp-action="Login" asp-controller="Account">Already have an account? Login here</a>
        </div>
        
    </form>
    
</div>
