@model OffersManagementSystem.Web.DTOs.LoginDTO

@{
    ViewData["Title"] = "Login";
}

<div >
    <div class="container-fluid " style="height:90vh">
        <div class="row " style="height:85vh">
            <!-- Left image section -->
            <div class="col-md-6 border-end d-flex align-items-center justify-content-center" style="border-color: #dee2e6;">
                <img src="~/images/offer-logo-1.png" alt="Login Image" class="img-fluid" style="height: 100%; object-fit: contain;" />
            </div>

            <!-- Right form section -->
            <div class="col-md-6 d-flex flex-column">
                <!-- Login title at top -->
                <div class="text-center mt-4">
                    <h2>@ViewData["Title"]</h2>
                </div>

                <!-- Login form centered vertically -->
                <div class="d-flex flex-grow-1 align-items-center justify-content-center">
                    <form asp-action="Login" method="post" style="width: 100%; max-width: 400px;">
                        <div class="mb-3">
                            <label asp-for="UserName" class="form-label">Username</label>
                            <input asp-for="UserName" class="form-control" />
                            <span asp-validation-for="UserName" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Password" class="form-label">Password</label>
                            <input asp-for="Password" type="password" class="form-control" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <button type="submit" class="btn btn-success w-100">Login</button>

                        <div class="mt-3 text-center">
                            <a asp-action="Register" asp-controller="Account">Don't have an account? Register here</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
