@model List<OffersManagementSystem.Web.DTOs.OfferResultDTO>

@{
    ViewData["Title"] = "Offers";
}

<div class="row">
    <div class="col-md-11">
        <h2>@ViewData["Title"]</h2>
    </div>
    <div class="col-md-1">
        <div class="btn btn-primary" style="width: 100px; text-align: center">
            <a class="nav-link text-dark" asp-area="" asp-controller="Offer" asp-action="Create">
                <i class="bi bi-clipboard2-plus-fill" style="font-size:20px"></i>
            </a>
        </div>
    </div>
</div>

<table class="table table-bordered table-striped">
    <thead class="table-dark">
        <tr>
            <th>Address</th>
            <th>Date</th>
            <th>Expiration date</th>
            <th>Dayes to expire</th>
            <th>Total</th>
            <th>#</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var offer in Model)
            {
                <tr>
                    <td>@offer.OfferAddress</td>
                    <td>@offer.OfferDate.ToString("dd/MM/yyyy")</td>
                    <td>@offer.ExpirationDate.ToString("dd/MM/yyyy")</td>
                    <td>@offer.DayesToExpire</td>
                    <td>@offer.Total.ToString("C")</td>
                    <td>
                        <div class="btn btn-primary" style="width: 100px; text-align: center">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Offer" asp-action="ViewOfferDetail" asp-route-id="@offer.Id">Details</a>
                        </div>

                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="2" class="text-center text-muted">No offers available</td>
            </tr>
        }
    </tbody>
</table>


<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
<link rel="stylesheet" href="~/css/offer.css" asp-append-version="true" />
<script src="~/js/offer.js asp-append-version="true"></script>

