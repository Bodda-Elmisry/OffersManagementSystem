@model OffersManagementSystem.Web.DTOs.OfferResultDTO

@{
    ViewData["Title"] = "Offer Details";
}

<h2>@ViewData["Title"]</h2>


<div class="container" style="padding-top: 20px">
    <div class="row">
        <div class="col-md-4">
            <img src="@Model.SerialQrCode" style="width:100%; height:100%;" />
        </div>
        <div class="col-md-8" style="padding-top: 10px">
            <div class="row border-bottom border-info info-card">
                <h4 class="title">Address of offer:</h4>
                <h5 class="details">@Model.OfferAddress</h5>
            </div>
            <div class="row border-bottom border-info info-card">
                <h4 class="title">Offer date:</h4>
                <h5 class="details">@Model.OfferDate.ToString("dd/MM/yyyy")</h5>
            </div>
            <div class="row border-bottom border-info info-card">
                <h4 class="title">Offer expiration date:</h4>
                <h5 class="details">@Model.ExpirationDate.ToString("dd/MM/yyyy")</h5>
            </div>
            <div class="row border-bottom border-info info-card">
                <div class="col-md-6 border-end border-info">
                    <h4 class="title">Dayes to expire:</h4>
                    <h5 class="details">@Model.DayesToExpire</h5>
                </div>
                <div class="col-md-6">
                    <h4 class="title">Total:</h4>
                    <h5 class="details">@Model.Total.ToString("C")</h5>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-7 border-end border-bottom border-info">
            <h4 class="title">Details:</h4>
            <h5 class="details over-lines">@Model.Details</h5>
        </div>
        <div class="col-md-5 border-bottom border-info">
            <h4 class="title">File</h4>
            <div style="height:220px; background-color:aliceblue; color:lightblue; display:flex; align-items:center; justify-content:center;">
                @if(Model.FilePath != null)
                {
                    <i class="bi bi-file-earmark-binary" style="font-size:80px;"></i>
                }
            </div>
            <div class="btn btn-info col-md-12" style="margin-top:5px; margin-bottom : 5px">
                <a class="nav-link text-dark" asp-area="" asp-controller="Offer" asp-action="DownloadFile" asp-route-filePath="@Model.FilePath">Download</a>
            </div>
        </div>
    </div>
</div>



<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">

<link rel="stylesheet" href="~/css/offer-details.css" asp-append-version="true" />
<script src="~/js/offer-details.js asp-append-version="true"></script>
