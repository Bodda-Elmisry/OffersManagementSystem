@model OffersManagementSystem.Web.DTOs.CreateOfferDTO

@{
    ViewData["Title"] = "Add New Offer";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Create" asp-controller="Offer" method="post" enctype="multipart/form-data" class="container" style="padding-top:20px">
    <div class="row">
        <h4 class="title info-card">Serial</h4>
        <input type="text" class="form-control text-body" asp-for="@Model.Serial" />
    </div>
    <div class="row">
        <h4 class="title info-card">Address of offer</h4>
        <input type="text" class="form-control text-body" asp-for="@Model.OfferAddress" />
    </div>
    <div class="row">
        <div class="col-md-4">
            <h4 class="title info-card">Offer date</h4>
            <input type="date" class="form-control text-body col-md-12" asp-for="@Model.OfferDate" />
        </div>
        <div class="col-md-4">
            <h4 class="title info-card">Offer dayes</h4>
            <input type="number" class="form-control text-body col-md-12" min="0" asp-for="@Model.OfferDayes" />
        </div>
        <div class="col-md-4">
            <h4 class="title info-card">Total</h4>
            <input type="number" class="form-control text-body col-md-12" min="0" asp-for="@Model.Total" />
        </div>
    </div>
    <div class="row">
        <h4 class="title info-card">Details</h4>
        <textarea class="form-control text-body" asp-for="@Model.Details" rows="6"></textarea>
    </div>
    <div class="row">
        <h4 class="title info-card">File</h4>
        <input type="file" class="form-control text-body" name="UploadedFile" />
    </div>

    <div class="row mt-3">
        <div class="col text-end">
            <button type="submit" class="btn btn-success">Create Offer</button>
        </div>
    </div>

</form>


<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">

<link rel="stylesheet" href="~/css/offer-details.css" asp-append-version="true" />
<script src="~/js/offer-details.js asp-append-version="true"></script>