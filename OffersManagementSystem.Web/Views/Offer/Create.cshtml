@model OffersManagementSystem.Web.DTOs.CreateOfferDTO

@{
    ViewData["Title"] = "Add New Offer";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Create" asp-controller="Offer" method="post" enctype="multipart/form-data" class="container" style="padding-top:20px">
    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
    <div class="row">
        <h4 class="title info-card">Serial</h4>
        <input type="text" class="form-control text-body" asp-for="Serial" />
        <span asp-validation-for="Serial" class="text-danger"></span>
    </div>
    <div class="row">
        <h4 class="title info-card">Address of offer</h4>
        <input type="text" class="form-control text-body" asp-for="OfferAddress" />
        <span asp-validation-for="OfferAddress" class="text-danger"></span>
    </div>
    <div class="row">
        <div class="col-md-4">
            <h4 class="title info-card">Offer date</h4>
            <input type="date" class="form-control text-body col-md-12" asp-for="OfferDate" />
            <span asp-validation-for="OfferDate" class="text-danger"></span>
        </div>
        <div class="col-md-4">
            <h4 class="title info-card">Offer dayes</h4>
            <input type="number" class="form-control text-body col-md-12" min="1" asp-for="OfferDayes" />
        </div>
        <div class="col-md-4">
            <h4 class="title info-card">Total</h4>
            <input type="number" class="form-control text-body col-md-12" min="0" asp-for="Total" />
        </div>
    </div>
    <div class="row">
        <h4 class="title info-card">Details</h4>
        <textarea class="form-control text-body" asp-for="Details" rows="6"></textarea>
        <span asp-validation-for="Details" class="text-danger"></span>
    </div>
    <div class="row">
        <h4 class="title info-card">File</h4>
        <input type="file" class="form-control text-body" name="UploadedFile" />
    </div>

    <div class="row mt-3">
        <div class="col text-end">
            <button type="submit" class="btn btn-success">Create Offer</button>
        </div>
    </div>

</form>


<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">

<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation/1.19.5/jquery.validate.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>


<link rel="stylesheet" href="~/css/offer-details.css" asp-append-version="true" />
<script src="~/js/offer-details.js asp-append-version="true"></script>